        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.2"
    },
    "autoload" : {
        "psr-4": {
            "MplusC\\WakatimeReadme\\": "app/"
        }
    },
    "scripts": {
        "semanal-update": [
            "php cron.php",
            "git config --global user.email '41898282+github-actions[bot]@users.noreply.github.com'",
